{
    "RootLogLevel": "INFO",

    "LoggerOverrides": {
        "DatabaseService": "ERROR",
        "PaymentService": "WARNING"
    },

    "Appenders": [
        {
            "Type": "Console",
            "Threshold": "DEBUG"
        },
        {
            "Type": "File",
            "Threshold": "INFO",
            "Settings": {
                "filePath": "logs/app.log"
            }
        }
    ]
}